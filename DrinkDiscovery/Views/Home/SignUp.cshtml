@model DrinkDiscovery.Models.HomeViewModel
@{
    ViewData["Title"] = "SignUp";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet">
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<h1>Sign Up</h1>

<form asp-action="SignUp" method="post" enctype="multipart/form-data">
    <section class="h-custom">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

                    <div class="row">
                        <!-- First Name input -->
                        <div class="col-md-6 mb-4">
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" class="form-control form-control-lg"
                                       placeholder="İsminizi Giriniz" asp-for="Kullanicilar_.KullaniciAd" />
                                <label class="form-label">İsim</label>
                            </div>
                        </div>

                        <!-- Last Name input -->
                        <div class="col-md-6 mb-4">
                            <div data-mdb-input-init class="form-outline">
                                <input type="text" class="form-control form-control-lg"
                                       placeholder="Soyisminizi Giriniz" asp-for="Kullanicilar_.KullaniciSoyad" />
                                <label class="form-label">Soyisim</label>
                            </div>
                        </div>
                    </div>

                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="email" class="form-control form-control-lg"
                               placeholder="Geçerli bir email adresi giriniz" asp-for="Kullanicilar_.KullaniciMail" />
                        <label class="form-label">Email</label>
                    </div>

                    <!-- Phone number input with country code -->
                    <div class="form-outline mb-3" style="width: 100%; max-width: 22rem; display: flex; align-items: center;">
                        <select id="country-code" class="form-select" style="max-width: 6rem; margin-right: 0.5rem;" data-mdb-select-init>
                            <option value="+48">+48</option>
                            <option value="+90" selected>+90</option>
                            <option value="+1">+1</option>
                        </select>

                        <div data-mdb-input-init class="form-outline" style="flex-grow: 1;">
                            <input type="text" id="phone" class="form-control" asp-for="Kullanicilar_.KullaniciTelefon" />
                            <label class="form-label">Phone number</label>
                        </div>
                    </div>

                    <!-- Image select with preview -->
                    <div class="mb-3">
                        <label for="kullanici_resmi" class="form-label">Profil Resmi</label>
                        <input type="file" class="form-control" id="kullanici_resmi" name="kullanici_resmi" style="width: 350px;" accept="image/*" onchange="previewImage(event)">
                    </div>
                    <div data-mdb-input-init class="form-outline mb-3">
                        <img id="selectedImage" src="#" alt="Seçilen Resim" style="display: none; width: 200px; height: 200px;">
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <input type="password" class="form-control form-control-lg"
                               placeholder="Şifre Giriniz" asp-for="Kullanicilar_.KullaniciSifre" />
                        <label class="form-label">Şifre</label>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Sign Up
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Zaten hesabınız var mı? <a asp-area="" asp-controller="Home" asp-action="Login"
                                                       class="link-danger">Giriş Yap</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </section>
</form>

<script type="text/javascript">
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
            const output = document.getElementById('selectedImage');
            output.src = reader.result;
            output.style.display = 'block';
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
