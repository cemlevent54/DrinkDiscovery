@model DrinkDiscovery_Revised.Models.TatlilarYorumlar

@* // yorum ekleme sayfası yap *@

@{
    ViewData["Title"] = "TatliYorumEkle";
    // Layout = "~/Views/Shared/_Layout.cshtml";

    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var id = userId;
    var tatliid = ViewBag.SelectedSweet.TatliId;

}

<h2>Yorum Ekleyin...</h2>

<form asp-action="TatliYorumEkle" method="post">
    @* kullanici id sini hidden value ya al *@
    <input type="hidden" asp-for="YorumKullaniciId" value="@userId" />
    <input type="hidden" asp-for="YorumTatlitatliId" value="@tatliid" />

    <div class="form-group">
        @* <label asp-for="YorumIcerik" class="control-label"></label> *@
        <textarea asp-for="YorumIcerik" class="form-control" rows="5" placeholder="Buradan yorum yazabilirsiniz..."></textarea>
        <span asp-validation-for="YorumIcerik" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Yorum Ekle" class="btn btn-primary" />
    </div>
</form>

