@{
    ViewData["Title"] = "TatliDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var SelectedSweet = (DrinkDiscovery_Revised.Models.Tatlilar)ViewBag.SelectedSweet;
    var SelectedSweetCategory = (DrinkDiscovery_Revised.Models.TatlilarKategoriler)ViewBag.SelectedSweetCategory;
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }
</style>

<h1>Tatlı Detay</h1>



<table class="table table-borderless">
    <tr>
        <td>
            <img id="selectedImage" src="@Url.Action("GetImage", "Tatli", new { id = SelectedSweet.TatliId })" style="width:800px;height:400px;" alt="Tatlı Resmi" />
        </td>
    </tr>
    <tr>
        <td>
            <h2>@SelectedSweet.TatliAd</h2>
        </td>
    </tr>
    <tr>
        <td>
            <h2 style="background-color:bisque;width:10%;"> @SelectedSweet.TatliFiyat TL </h2>
        </td>
    </tr>
    <tr style="font-size:20px;">
        <td>
            <p> <b>Malzemeler: </b> @SelectedSweet.TatliMalzemeler</p>
        </td>
    </tr>
    <tr style="font-size:20px;">
        <td>
            <p> <b>Yapılış: </b> @SelectedSweet.TatliYapilis</p>
        </td>
    </tr>
    <tr style="font-size:20px;">
        <td>
            <p> <b>Puan: </b> @SelectedSweet.TatliPuan</p>
        </td>
    </tr>
    <tr style="font-size:20px;">
        <td>
            <p> <b>Kategori: </b> @SelectedSweetCategory.TatliKategoriAd</p>
        </td>
    </tr>

</table>

<h2>Yorumlar</h2>

@await Html.PartialAsync("TatliYorumlariGoruntule") 

@if(User.Identity.IsAuthenticated)
{
    @await Html.PartialAsync("TatliYorumEkle")
}
else
{
    
}