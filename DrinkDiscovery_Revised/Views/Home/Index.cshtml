@{
    ViewData["Title"] = "Home Page";
}

@model HomeViewModel
@using DrinkDiscovery_Revised.Models


<style>
    #carouselExampleDark .carousel-inner img {
        height: 450px; /* Set the desired height here */
    }

    /* Card CSS */
    img {
        height: 150px;
        width: 100%;
        object-fit: cover; /* Ensures images cover the card without distortion */
    }

    div[class^="col-"] {
        padding-left: 5px;
        padding-right: 5px;
    }

    .card {
        transition: 0.5s;
        cursor: pointer;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
    }

    .card-title {
        font-size: 18px;
        transition: 1s;
        cursor: pointer;
        margin: 0;
        color: #333;
    }

        .card-title i {
            font-size: 15px;
            transition: 1s;
            cursor: pointer;
            color: #ffa710;
        }

            .card-title i:hover {
                transform: scale(1.25) rotate(100deg);
                color: #18d4ca;
            }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
    }

    .card-text {
        height: 80px;
        font-size: 14px;
        color: #666;
    }

    .card::before, .card::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        transform: scale3d(0, 0, 1);
        transition: transform .3s ease-out 0s;
        background: rgba(255, 255, 255, 0.1);
        content: '';
        pointer-events: none;
    }

    .card::before {
        transform-origin: left top;
    }

    .card::after {
        transform-origin: right bottom;
    }

    .card:hover::before, .card:hover::after, .card:focus::before, .card:focus::after {
        transform: scale3d(1, 1, 1);
    }

    /* Quantity selector */
    .quantity-selector {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
    }

        .quantity-selector input {
            width: 50px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 0 5px;
        }

        .quantity-selector button {
            border: 1px solid #ddd;
            border-radius: 5px;
            background: #f8f9fa;
            color: #333;
            padding: 5px 10px;
            margin-left: 5px;
            margin-right: 5px;
        }

            .quantity-selector button:hover {
                background: #ddd;
            }

    .btn-minus {
        background-color: #ff4d4d;
        color: white;
    }

    .btn-plus {
        background-color: #4dff4d;
        color: white;
    }

    .btn-minus:hover {
        background-color: #ff1a1a;
    }

    .btn-plus:hover {
        background-color: #1aff1a;
    }
</style>

@Html.Partial("_UrunSliderPartial")

