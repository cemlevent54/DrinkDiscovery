    var tatliKategoriler = ViewBag.TatlilarKategoriler as List<DrinkDiscovery_Revised.Models.TatlilarKategoriler> ?? new List<DrinkDiscovery_Revised.Models.TatlilarKategoriler>();
    var urunKategoriler = ViewBag.UrunKategoriler as List<DrinkDiscovery_Revised.Models.UrunKategoriler> ?? new List<DrinkDiscovery_Revised.Models.UrunKategoriler>();
    
