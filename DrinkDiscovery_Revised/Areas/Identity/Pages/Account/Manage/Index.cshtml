@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- First Name Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ad" class="form-control" placeholder="Please enter your first name." />
                <label asp-for="Input.ad" class="form-label"></label>
                <span asp-validation-for="Input.ad" class="text-danger"></span>
            </div>

            <!-- Last Name Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.soyad" class="form-control" placeholder="Please enter your last name." />
                <label asp-for="Input.soyad" class="form-label"></label>
                <span asp-validation-for="Input.soyad" class="text-danger"></span>
            </div>

            <!-- Username Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.username" class="form-control" placeholder="Please enter your username." />
                <label asp-for="Input.username" class="form-label"></label>
                <span asp-validation-for="Input.username" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.mail" class="form-control" placeholder="Please enter your email address." />
                <label asp-for="Input.mail" class="form-label"></label>
                <span asp-validation-for="Input.mail" class="text-danger"></span>
            </div>

            <!-- Phone Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.telno" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.telno" class="form-label"></label>
                <span asp-validation-for="Input.telno" class="text-danger"></span>
            </div>

            
            
            <!-- Photo Section -->
            <div class="form-group">
                <label class="form-label">Kullanıcı Resim</label>
                <input asp-for="Input.photo_iformfile" id="kullanici_resim" class="form-control" placeholder="Please enter your photo." />
                <span asp-validation-for="Input.mail" class="text-danger"></span>
            </div>
           <!-- Photo Display -->
            <img id="selectedImage" src="@Model.Input.photo_src" style="width:100px;height:100px;" />

            <!-- Save Button -->
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Photo Display Script 
        document.getElementById('kullanici_resim').addEventListener('change', function (event) {
            const input = event.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const image = document.getElementById('selectedImage');
                    image.src = e.target.result;
                    image.style.display = 'block';
                    image.style.width = '100px';
                    image.style.height = '100px';
                }
                reader.readAsDataURL(input.files[0]);
            }
        });
    </script>
}
