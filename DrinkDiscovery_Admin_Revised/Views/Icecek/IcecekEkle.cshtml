@model DrinkDiscovery_Admin_Revised.Models.Iceceklers
@using DrinkDiscovery_Admin_Revised.Models

@{
    ViewData["Title"] = "IcecekEkle";
}

<h1>İçecek Ekle</h1>

<form asp-action="IcecekEkle" class="form-group" enctype="multipart/form-data">

    <table class="table table-active">
        <tr>
            <td>
                <div class="mb-3">
                    <label for="icecek_ad" class="form-label">İçecek Adı</label>
                    @Html.TextBoxFor(x => x.icecek_ad, new { @class = "form-control", @id = "icecek_ad", style = "width: 350px;" })
                </div>
            </td>
            <td>
                <div class="mb-3">
                    <label for="icecek_resmi" class="form-label">İçecek Resmi</label>
                    <input type="file" class="form-control" id="icecek_resmi" name="icecek_resmi" style="width: 350px;" accept="image/*">
                </div>
                <br />
                <div class="mt-3">
                    <img id="selectedImage" src="#" alt="Seçilen Resim" style="display: none; max-width: 350px; max-height: 300px;">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="mb-3">
                    <label for="icecek_malzemeler" class="form-label">İçecek Malzemeler</label>
                    @Html.TextAreaFor(x => x.icecek_malzemeler, new { @class = "form-control", @id = "icecek_malzemeler", style = "width: 600px;height: 200px;", rows = "5" })
                </div>
            </td>
            <td>
                
                <div class="mb-3">
                    <label for="icecek_icerik" class="form-label">İçecek Yapılış</label>
                    @Html.TextAreaFor(x => x.icecek_yapilis, new { @class = "form-control", @id = "icecek_icerik", style = "width: 600px;height: 200px;", rows = "5" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="mb-3">
                    <label for="icecek_puan" class="form-label">İçecek Puanı</label>
                    @Html.TextBoxFor(x => x.icecek_puan, new { @class = "form-control", @id = "icecek_puan", style = "width: 350px;" })
                </div>
            </td>
            <td>
                <div class="mb-3">
                    <label for="icecek_fiyat" class="form-label">İçecek Fiyatı</label>
                    @Html.TextBoxFor(x => x.icecek_fiyat, new { @class = "form-control", @id = "icecek_fiyat", style = "width: 350px;" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <label for="icecek_kategori_id" class="control-label">Kategori</label>
                    @Html.DropDownListFor(i => i.icecek_kategori.icecek_kategori_id, (IEnumerable<SelectListItem>)ViewBag.dgr, new { @class = "form-control", style = "width: 350px;" })
                </div>
            </td>
            <td>
                <button class="btn btn-info" style="width: 350px;">İçecek Ekle</button>
            </td>
        </tr>

    </table>



    <br />










    <br />

</form>

<script>
    document.getElementById('icecek_resmi').addEventListener('change', function (event) {
        const input = event.target;
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const image = document.getElementById('selectedImage');
                image.src = e.target.result;
                image.style.display = 'block';
            }
            reader.readAsDataURL(input.files[0]);
        }
    });
</script>
