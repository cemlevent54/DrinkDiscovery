@model IEnumerable<DrinkDiscovery_Admin_Revised.Models.UrunKategoris>
@using DrinkDiscovery_Admin_Revised.Models

@{
    ViewData["Title"] = "KategoriListele";
}

<h1>Ürün Kategori Listele</h1>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Adı</th>
            <th>Kategori Resim</th>
            <th>Kategori Miktar</th> 
            <th>Kategori Sil</th>
            <th>Kategori Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.urun_kategori_id</td>
                <td>@item.urun_kategori_ad</td>
                <td>-</td>
                <td>0</td>
                @* <td>
                     <img src="@Url.Action("GetImage", "Icecek", new { id = item.icecek_id })" style="width:100px;height:100px;" /> 
                </td> *@
                
                <td>
                    <a href="@Url.Action("KategoriSil", "UrunlerKategori", new { id = item.urun_kategori_id })" class="btn btn-danger" onclick="confirmDeletion('@Url.Action("Delete", "UrunKategori", new { id = item.urun_kategori_id })')">Sil</a>
                </td>
                <td>
                    <a href="@Url.Action("KategoriDuzenle", "UrunlerKategori", new { id = item.urun_kategori_id })" class="btn btn-primary">Düzenle</a>
                </td>
            </tr>
        }
</table>

<!-- JavaScript -->
<script src="~/js/site.js"></script>

<script type="text/javascript">
    function confirmDeletion(url) {
        if (confirm("Gerçekten silmek istiyor musunuz?")) {
            window.location.href = url;
        }
    }
</script>


