@model DrinkDiscovery_Admin_Revised.Models.IcecekKategoris;
@using DrinkDiscovery_Admin_Revised.Models;

@{
    ViewData["Title"] = "KategoriDuzenle";
}

<h1>KategoriDuzenle</h1>

@using (Html.BeginForm("KategoriDuzenle", "IcecekKategori", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="table table-active">
        <tr>
            <td>
                <div class="mb-3">
                    <label for="icecek_kategori_id" class="form-label">Kategori ID</label>
                    @Html.TextBoxFor(x => x.icecek_kategori_id, new { @class = "form-control", @id = "icecek_kategori_id", style = "width: 350px;", @readonly = "readonly" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="mb-3">
                    <label for="icecek_kategori_ad" class="form-label">Kategori Adı</label>
                    @Html.TextBoxFor(x => x.icecek_kategori_ad, new { @class = "form-control", @id = "icecek_ad", style = "width: 350px;" })
                </div>
            </td>
        </tr>
        
    </table>

    <br />
    <button class="btn btn-info" style="width: 350px;">Kategori Düzenle</button>
}